<h2 class="page-header">Search Authors</h2>
<form action="/authors" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Author</label>
      <input type="text" name="name3" value="<%= searchOptions2.name %>" />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br />
<% authors2.forEach(author => { %>
<div class="author-row">
  <div class="author-name"><%= author.name %></div>
</div>
<div>
  <a href="/authors/<%= author.id %>">View</a>

  <a href="/authors/<%= author.id %>/edit">Edit</a>
<!-- 
  <form action="/authors/<%= author.id %>?_method=PUT" method="post">
    <button type="submit">Update</button>
  </form> -->

  <%- include('../partials/deleteForm.ejs', { url: `/authors/${author.id}`}) %> 
</div>
<% }) %>
